    </bean>
    <bean id = "roll" class = "com.spring_core.DI.Student">
        <constructor-arg name="rollNum" value="100" type="int"/>
    </bean>
    <bean id = "name" class = "com.spring_core.DI.Student">
        <constructor-arg name="studName" value="Mahemud Borote" type="java.lang.String"/>
    </bean>



